doctype html
html
    head
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
        title INSPINIA | Register
        link(href='/css/bootstrap.min.css', rel='stylesheet')
        link(href='/font-awesome/css/font-awesome.css', rel='stylesheet')
        link(href='/css/plugins/iCheck/custom.css', rel='stylesheet')
        link(href='/css/animate.css', rel='stylesheet')
        link(href='/css/style.css', rel='stylesheet')
    body.gray-bg
        .middle-box.loginscreen.text-center.animated.fadeInDown
            div
                div
                    h1.logo-name IC+
                    h3 Register to IC+
                    p Create account to see it in action.
                    form.m-t(role='form', action='/users/register',method='post')
                        .form-group
                            input.form-control(type='text', name='name', placeholder='Name', required='')
                        .form-group
                            input.form-control(type='email', placeholder='Email', required='',name='email')
                        .form-group
                            input.form-control(type='password', placeholder='Password', required='',name='password')
                        .form-group
                            input.form-control(type='password', placeholder='Repeat Password', required='',name='password2')
                        
                        input.btn.btn-primary.block.full-width.m-b(type='submit',name='submit',value='Register')
                        p.text-muted.text-center
                            small Already have an account?
                        a.btn.btn-sm.btn-white.btn-block(href='login.html') Login
                        p.m-t
                        small Cpanel được design trên nền Bootstrap 3 &copy; 2017
            // Mainly scripts
            script(src='/js/jquery-2.1.1.js')
            script(src='/js/bootstrap.min.js')
            
